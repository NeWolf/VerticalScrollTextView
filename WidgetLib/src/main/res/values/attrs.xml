<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="VerticalScrollTextViewStyle">
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="reference|color" />
        <attr name="maxLines" format="integer" min="0" />
        <attr name="ellipsize">
            <enum name="none" value="0" />
            <enum name="start" value="1" />
            <enum name="middle" value="2" />
            <enum name="end" value="3" />
            <enum name="marquee" value="4" />
        </attr>
        <attr name="textStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="animDirection">
            <enum name="bottom2top" value="0"/>
            <enum name="top2bottom" value="1"/>
        </attr>

        <attr name="duration" format="integer" min="0" />
        <attr name="intervalTime" format="integer" min="0" />
    </declare-styleable>
</resources>